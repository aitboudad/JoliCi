{
    "name": "jolicode/jolici",
    "description": "Run your tests on your local computer on different application stack",
    "type": "library",
    "license": "MIT",
    "keywords": ["test", "ci", "travisci", "docker", "continuous", "integration"],
    "authors": [
        {
            "name": "Joel Wurtz",
            "email": "jwurtz@jolicode.com",
            "homepage": "https://twitter.com/JoelWurtz"
        }
    ],
    "require" : {
        "php" : ">=5.3",
        "symfony/console" : "~2.4",
        "symfony/filesystem" : "~2.4",
        "symfony/finder" : "~2.4",
        "symfony/yaml" : "~2.4",
        "monolog/monolog": "~1.6",
        "stage1/docker-php": "~0.2.1",
        "cedriclombardot/twig-generator": "~1.0.0",
        "guzzlehttp/streams": "~1.3.0",
        "behat/transliterator": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~3.7",
        "mikey179/vfsStream": "~1.2"
    },
    "bin": [
        "bin/jolici"
    ],
    "autoload" : {
        "psr-0" : {
            "Joli" : "src"
        }
    }
}
